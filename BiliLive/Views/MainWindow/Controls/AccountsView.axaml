<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:BiliLive.Views.MainWindow.Controls"
             xmlns:resources="clr-namespace:BiliLive.Resources"
             xmlns:converters="clr-namespace:BiliLive.Converters"
             mc:Ignorable="d"
             x:Class="BiliLive.Views.MainWindow.Controls.AccountsView"
             x:DataType="vm:AccountsViewModel"
             FontFamily="{StaticResource NotoMedium}">

    <Design.DataContext>
        <vm:AccountsViewModel />
    </Design.DataContext>


    <Border Focusable="True"
            Background="Transparent"
            BorderThickness="10" BorderBrush="Transparent">
        <Border CornerRadius="24" Background="{DynamicResource Surface}"
                BoxShadow="0 1 8 2 #26000000">
            <Border Background="Transparent" CornerRadius="28" ClipToBounds="True">
                <Grid MinWidth="219" MinHeight="135">
                     <!-- 登录页面 从左边向右-->
                    <Border Name="QrLoginBorder"
                            ZIndex="1"
                            Opacity="{Binding !IsInLoginProcess,Converter={converters:BoolToOpacityConverter}}"
                            IsHitTestVisible="{Binding IsInLoginProcess}"
                            Background="{DynamicResource Surface}"
                            Width="219" Height="135"
                            >

                        <Border.Transitions>
                            <Transitions>
                                <DoubleTransition Property="Width" Duration="0:0:0.3" Easing="ExponentialEaseOut" />
                                <DoubleTransition Property="Height" Duration="0:0:0.3" Easing="ExponentialEaseOut" />
                                <DoubleTransition Property="Opacity" Duration="0:0:0.3" Easing="ExponentialEaseOut" />
                            </Transitions>
                        </Border.Transitions>

                        <Border.RenderTransform>
                            <TranslateTransform Y="0" />
                        </Border.RenderTransform>
                        
                        <Grid ColumnDefinitions="Auto,Auto"
                              Margin="10 8 10 8">
                            <Grid Grid.Column="0" Margin="0 0 10 0"
                                  RowDefinitions="Auto,Auto,*,Auto">
                                <SvgBox Grid.Row="0" Width="21" Height="21"
                                        Margin="3 9 0 4"
                                        HorizontalAlignment="Left"
                                        PathData="{resources:Geometry {x:Static resources:MdIcons.Qr}}">
                                </SvgBox>
                                <TextBlock Grid.Row="1" 
                                           FontFamily="{StaticResource NotoRegular}"
                                           Margin="3 0 0 0"
                                           FontSize="12" LineHeight="16">
                                    <Run Text="扫描二维码"/>
                                    <LineBreak/>
                                    <Run Text="以登录"/>
                                </TextBlock>
                                <Button Grid.Row="3"
                                        Background="{DynamicResource SurfaceContainer}"
                                        Width="65" Height="31"
                                        CornerRadius="10 10 15 15"
                                        Margin="2 0 0 0"
                                        Command="{Binding CancelLoginCommand}"
                                        Click="AccountBtn_OnClick"
                                        Theme="{StaticResource MdButton}"
                                        >
                                    <StackPanel Orientation="Horizontal"
                                                VerticalAlignment="Center"
                                                HorizontalAlignment="Center">
                                        <SvgBox Width="21" Height="21"
                                                Margin="-8 0 0 0"
                                                PathData="{resources:Geometry {x:Static resources:MdIcons.Back}}"></SvgBox>
                                        <TextBlock FontFamily="{StaticResource NotoRegular}"
                                                   FontSize="12" LineHeight="16" VerticalAlignment="Center">
                                            返回
                                        </TextBlock>
                                    </StackPanel>
                                </Button>
                            </Grid>
                            
                            <Border Grid.Column="1"
                                    CornerRadius="12" ClipToBounds="False" Background="SkyBlue"
                                    BorderThickness="5"
                                    BorderBrush="{DynamicResource SurfaceContainer}"
                                    Width="130" Height="130">
                                <Border Width="125" Height="125" BorderThickness="0"  CornerRadius="12" ClipToBounds="True">
                                    <Image Source="{Binding QrCodePic}"/>
                                </Border>
                            </Border>
                        </Grid>
                    </Border>
                    
                    <!-- 第一页 -->
                    <Border Name="AccountBorder" Opacity="{Binding IsInLoginProcess,Converter={converters:BoolToOpacityConverter}}">

                        <Border.Transitions>
                            <Transitions>
                                <DoubleTransition Property="Opacity" Duration="0:0:1.0" Easing="CubicEaseOut" />
                            </Transitions>
                        </Border.Transitions>

                        <Border.RenderTransform>
                            <TranslateTransform X="0" />
                        </Border.RenderTransform>
                        
                        <Grid Margin="3" RowDefinitions="*,Auto"
                              
                              
                              IsVisible="True"
                              
                              >
                            <!-- 当前账号信息 -->
                            <Border Grid.Row="0">
                                <Grid Background="Transparent" ColumnDefinitions="Auto,*">
                                    <Border Grid.Column="0" Height="58" Width="58" 
                                            CornerRadius="60"
                                            ClipToBounds="True" Margin="15 0 0 0">
                                        <Image Width="58" Height="58"
                                               RenderOptions.BitmapInterpolationMode="HighQuality"
                                               Source="{Binding UserFace}" />
                                    </Border>
                                    <Border Grid.Column="1">
                                        <StackPanel Orientation="Vertical"
                                                    Margin="8 16 0 0"
                                                    Spacing="2"
                                                    VerticalAlignment="Center">
                                            <TextBlock HorizontalAlignment="Left" VerticalAlignment="Center"
                                                       FontSize="15" LineHeight="16"
                                                       FontWeight="Bold"
                                                       Text="{Binding GeneralState.UserName}"/>
                                            <TextBlock HorizontalAlignment="Left"
                                                       FontWeight="Medium"
                                                       FontSize="10" LineHeight="16"
                                                       Margin="1 0 0 0"
                                                       Text="{Binding GeneralState.UserId,StringFormat=UID {0}}" />
                                        </StackPanel>
                                    </Border>
                             
                                </Grid>
                            </Border>
                            
                            <!-- 功能相关 -->
                            <Border Grid.Row="1" HorizontalAlignment="Stretch" Margin="0 0 7 7">
                                <Grid ColumnDefinitions="3*,*,Auto">
                                    <Grid.Styles>
                                        <Style Selector="Button.add">
                                            <Setter Property="Background" Value="{DynamicResource SurfaceContainer}"></Setter>
                                            <Setter Property="CornerRadius" Value="10 10 15 15"/>
                                            <Setter Property="Height" Value="33"/>
                                            <Setter Property="Theme" Value="{StaticResource MdButton}"/>
                                        </Style>
                                    </Grid.Styles>
                                    
                                    <Button Grid.Column="0" Classes="add"
                                            Margin="7 0 2 0"
                                            HorizontalAlignment="Stretch"
                                            Click="AccountBtn_OnClick"
                                            Command="{Binding LoginStatusConverterCommand}">
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <SvgBox PathData="{resources:Geometry {x:Static resources:MdIcons.Add}}"
                                                    Height="17"
                                                    VerticalAlignment="Center"
                                                    Fill="{DynamicResource OnSurface}" />
                                            <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center"
                                                       FontWeight="Medium"
                                                       FontSize="12" LineHeight="16"
                                                       Text="更换账号" />
                                        </StackPanel>
                                    </Button>
                                    
                                    <Button Grid.Column="1"
                                            Name="DelAltBtn" Classes="add"
                                            Margin="2 0 0 0"
                                            HorizontalAlignment="Stretch"
                                            Command="{Binding DelAccountCommand}"
                                            CommandParameter="{x:True}"
                                            Click="DelBtn_OnClick"
                                           >
                                        <StackPanel Orientation="Horizontal"
                                                    HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10 0 8 0">
                                            <SvgBox PathData="{resources:Geometry {x:Static resources:MdIcons.Delete}}"
                                                    Margin="0 0 2 0"
                                                    VerticalAlignment="Center" HorizontalAlignment="Center"
                                                    Fill="{DynamicResource OnSurface}" 
                                                    Height="17"/>
                                        </StackPanel>
                                    </Button>
                                    
                                    <Button Grid.Column="2"
                                            Name="DiscardBtn" Classes="add"
                                            Margin="4 0 0 0"
                                            Width="0"
                                            HorizontalAlignment="Stretch"
                                            Command="{Binding DelAccountCommand}"
                                            CommandParameter="{x:False}"
                                            Click="DelBtn_OnClick">
                                        <Button.Transitions>
                                            <Transitions>
                                                <DoubleTransition Property="Width" Duration="0.3" Easing="CubicEaseOut" />
                                            </Transitions>
                                        </Button.Transitions>
                                        <SvgBox PathData="{resources:Geometry {x:Static resources:MdIcons.Error}}"
                                                VerticalAlignment="Center" HorizontalAlignment="Center"
                                                Fill="{DynamicResource OnSurface}" 
                                                Height="17"/>
                                    </Button>
                                </Grid>
                            </Border>
                        </Grid>
                    </Border>
                </Grid>
            </Border>

        </Border>
    </Border>

</UserControl>