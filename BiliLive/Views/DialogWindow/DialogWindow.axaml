<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:BiliLive.Views.DialogWindow"
        Background="Transparent"
        TransparencyBackgroundFallback="{DynamicResource Surface}"
        TransparencyLevelHint="Transparent"
        x:Class="BiliLive.Views.DialogWindow.DialogWindow"
        x:DataType="vm:DialogWindowViewModel"
        SystemDecorations="None"
        ShowInTaskbar="False"
        WindowStartupLocation="CenterOwner"
        SizeToContent="WidthAndHeight"
        Title="ErrorWindow"
        MaxWidth="560" MaxHeight="300"
        >
    
    <Design.DataContext>
        <vm:DialogWindowViewModel Message="This is a test error message."/>
    </Design.DataContext>
    
    <Border Name="DialogMainBorder" MinHeight="181" MinWidth="300"
            BorderThickness="10"
            BorderBrush="Transparent"
            CornerRadius="28"
            BoxShadow="0 1 8 1 #26000000"
            Focusable="True"
            Background="{DynamicResource Surface}"
            Opacity="0"
            >
        <Border.RenderTransform>
            <ScaleTransform>
                <ScaleTransform.ScaleX>0.9</ScaleTransform.ScaleX>
                <ScaleTransform.ScaleY>0.9</ScaleTransform.ScaleY>
            </ScaleTransform>
        </Border.RenderTransform>
        
        
        <Grid RowDefinitions="Auto,*">
            <!-- 标题 -->
            <Border Grid.Row="0" Margin="10 12 10 0" >
                <Grid Background="Transparent">
                    
                    <TextBlock FontWeight="Medium"
                               VerticalAlignment="Center"
                               FontSize="16" Text="Error" />
                    <Button Content="123" HorizontalAlignment="Right"></Button>
                </Grid>
            </Border>
            
            <!-- 内容 -->
            <Grid Grid.Row="1" RowDefinitions="*,Auto">
                <ScrollViewer Grid.Row="0">
                    <StackPanel>
                        <TextBlock Text="{Binding Message}"
                                   TextWrapping="Wrap" TextAlignment="Left"
                                   Margin="30" VerticalAlignment="Center"/>
                    </StackPanel>
                </ScrollViewer>
               
                
                <StackPanel Grid.Row="1" 
                            HorizontalAlignment="Right"
                            Orientation="Horizontal">
                    <Button Click="Button_OnClick"
                            Content="Cancel"/>
                    <Button Click="Button_OnClick"
                            Command="{Binding ConfirmCommand}"
                            Content="Confirm"/>
                </StackPanel>
              
            </Grid>
        </Grid>
        
    </Border>
</Window>
