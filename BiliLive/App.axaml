<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="BiliLive.App"
             xmlns:local="using:BiliLive"
             RequestedThemeVariant="Default">
    <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

    <Application.DataTemplates>
        <local:ViewLocator />
    </Application.DataTemplates>

    <TrayIcon.Icons>
        <TrayIcons>
            <TrayIcon Icon="/Assets/avalonia-logo.ico" 
                      Clicked="TrayIcon_OnClicked"
                      ToolTipText="Avalonia Tray Icon ToolTip">
                <TrayIcon.Menu>
                    <NativeMenu>
                        <NativeMenuItem Header="Settings">
                            <NativeMenu>
                                <NativeMenuItem Header="Open"   />
                                <NativeMenuItem Header="Start with system"   />
                                <NativeMenuItemSeparator />
                                <NativeMenuItem Header="Exit"  />
                            </NativeMenu>
                        </NativeMenuItem>
                    </NativeMenu>
                </TrayIcon.Menu>
            </TrayIcon>
        </TrayIcons>
    </TrayIcon.Icons>
    
    <Application.Styles>
        <FluentTheme />
        <Style Selector="Window,UserControl">
            <Setter Property="FontFamily" Value="{DynamicResource NotoRegular}"></Setter>
        </Style>
        <Style Selector="Border">
            <Setter Property="Transitions">
                <Transitions>
                    <BrushTransition Property="Background" Duration="0.3"/>
                </Transitions>
            </Setter>
        </Style>
        <Style Selector="StackPanel">
            <Setter Property="Transitions">
                <Transitions>
                    <BrushTransition Property="Background" Duration="0.3"/>
                </Transitions>
            </Setter>
        </Style>
        <Style Selector="Grid">
            <Setter Property="Transitions">
                <Transitions>
                    <BrushTransition Property="Background" Duration="0.3"/>
                </Transitions>
            </Setter>
        </Style>
        <Style Selector="TextBox">
            <Setter Property="Transitions">
                <Transitions>
                    <BrushTransition Property="Foreground" Duration="0.3"/>
                    <BrushTransition Property="BorderBrush" Duration="0.3"/>
                </Transitions>
            </Setter>
        </Style>
        <Style Selector="TextBlock">
            <Setter Property="Transitions">
                <Transitions>
                    <BrushTransition Property="Foreground" Duration="0.3"/>
                </Transitions>
            </Setter>
        </Style>
        <Style Selector="SvgBox">
            <Setter Property="Transitions">
                <Transitions>
                    <BrushTransition Property="Fill" Duration="0.3"/>
                </Transitions>
            </Setter>
        </Style>
    </Application.Styles>

    <Application.Resources>
    
        <ResourceDictionary>
            <FontFamily x:Key="NotoRegular">
                avares://BiliLive/Assets/Fonts/NotoSans-Regular.ttf#Noto Sans,
                avares://BiliLive/Assets/Fonts/NotoSansSC-Regular.ttf#Noto Sans SC Regular
            </FontFamily>
            
            <FontFamily x:Key="NotoMedium">
                avares://BiliLive/Assets/Fonts/NotoSans-Medium.ttf#Noto Sans Medium,
                avares://BiliLive/Assets/Fonts/NotoSansSC-Medium.ttf#Noto Sans SC Medium
            </FontFamily>
            
            <ResourceDictionary.MergedDictionaries>
                <ResourceInclude Source="/Resources/MDColors.axaml" />
                <ResourceInclude Source="/Views/MainWindow/Controls/PageSwitchButton.axaml"/>
                <ResourceInclude Source="/Resources/Themes/MdCheckBox.axaml" />
                <ResourceInclude Source="/Resources/Themes/MdButton.axaml"/>
                <ResourceInclude Source="/Resources/Themes/MdToggleButton.axaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
    

    
    
</Application>