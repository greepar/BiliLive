<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="BiliLive.App"
             xmlns:local="using:BiliLive"
             RequestedThemeVariant="Light">
    <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

    <Application.DataTemplates>
        <local:ViewLocator />
    </Application.DataTemplates>

    <Application.Styles>
        <FluentTheme />
    </Application.Styles>

    <Application.Resources>
    
        <ResourceDictionary>
            <FontFamily x:Key="NotoRegular">avares://BiliLive/Assets/Fonts/NotoSansSC-Regular.ttf#Noto Sans SC Regular</FontFamily>
            <!-- <FontFamily x:Key="PingFangRegular">avares://BiliLive/Assets/Fonts/PingFang-Regular.ttf#PingFang SC Regular</FontFamily> -->
            
            
            <ResourceDictionary.MergedDictionaries>
                <ResourceInclude Source="/Resources/MDColors.axaml" />
                <ResourceInclude Source="/Resources/Themes/MdCheckBox.axaml" />
                <ResourceInclude Source="/Resources/Themes/MdButton.axaml"/>
                <ResourceInclude Source="/Resources/Themes/MdToggleButton.axaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
    

    
    
</Application>