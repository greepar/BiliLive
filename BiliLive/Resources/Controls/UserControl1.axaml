<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:res="clr-namespace:BiliLive.Resources"
             FontFamily="PingFang SC Regular"
             mc:Ignorable="d" d:DesignWidth="600" d:DesignHeight="500"
             x:Class="BiliLive.Resources.Controls.UserControl1">
    
    <StackPanel Spacing="10">
        <Border CornerRadius="12"
              
                ClipToBounds="True">
            <Grid>
                <Border Background="#F7F2FA"/>
                <Grid RowDefinitions="Auto,*">
                <Border Grid.Row="0" Height="28" 
                        VerticalAlignment="Top"
                        Background="#F8EAF3">
                    <Grid ColumnDefinitions="Auto,*,Auto">
                        <TextBlock Text="自动服务核心"
                                   Margin="8 0 0 0"
                                   VerticalAlignment="Center"></TextBlock>
                        <Button CornerRadius="10" Height="25" Width="25"
                                Margin="0 0 0 0"
                                Grid.Column="2" Theme="{StaticResource MdButton}">
                            <SvgBox Height="" Opacity="0.5" PathData="{res:Geometry {x:Static res:MdIcons.Expand}}"></SvgBox>
                        </Button>
                    </Grid>
                </Border>
                    
                <Border Grid.Row="1">
                    <StackPanel Margin="13" Spacing="10">
                        <Grid ColumnDefinitions="Auto,*,Auto">
                            <TextBlock LineHeight="20" Grid.Column="0">Ffmpeg目录</TextBlock>
                            <Button Margin="5 0 5 0" 
                                    CornerRadius="10" Opacity="0.65" Grid.Column="1" Background="#FFFFFF"></Button>
                            <Button Grid.Column="2" HorizontalAlignment="Right" Theme="{StaticResource MdButton}">Browse</Button>
                        </Grid>
                        
                        <Grid ColumnDefinitions="Auto,*,Auto">
                            <TextBlock Margin="18 0 0 0" LineHeight="20" Grid.Column="0">视频目录</TextBlock>
                            <Button Margin="5 0 5 0" 
                                    CornerRadius="10" Opacity="0.65" Grid.Column="1" Background="#FFFFFF"></Button>
                            <Button Grid.Column="2" HorizontalAlignment="Right" Theme="{StaticResource MdButton}">Browse</Button>
                        </Grid>
                        
                        <!-- <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="6" Padding="6"> -->
