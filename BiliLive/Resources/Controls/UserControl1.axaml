                        <!--         ~1~ 小时 @1@ -->
                        <!--         <TextBox Width="40" Text="12" HorizontalContentAlignment="Center"/> -->
                        <!--         <TextBlock Text=":" VerticalAlignment="Center"/> -->
                        <!-- -->
                        <!--         ~1~ 分钟 @1@ -->
                        <!--         <TextBox Width="40" Text="34" HorizontalContentAlignment="Center"/> -->
                        <!--         <TextBlock Text=":" VerticalAlignment="Center"/> -->
                        <!-- -->
                        <!--         ~1~ 秒 @1@ -->
                        <!--         <TextBox Width="40" Text="56" HorizontalContentAlignment="Center"/> -->
                        <!-- -->
                        <!--         ~1~ AM/PM 切换 @1@ -->
                        <!--         <ComboBox Width="60"> -->
                        <!--             <ComboBoxItem Content="AM"/> -->
                        <!--             <ComboBoxItem Content="PM"/> -->
                        <!--         </ComboBox> -->
                        <!--     </StackPanel> -->
                        <!-- </Border> -->

                        
                    </StackPanel>
                </Border>
                </Grid>
                
            </Grid>
        </Border>
        
        <Border CornerRadius="12"
                Height="60"
                ClipToBounds="True">
            <Grid>
                <Border Background="#F7F2FA"/>
                <Border Height="28" 
                        VerticalAlignment="Top"
                        Background="#F8EAF3">
                    <Grid ColumnDefinitions="Auto,*,Auto">
                        <TextBlock Grid.Column="0" Text="定时直播任务"
                                   Margin="8 0 0 0"
                                   VerticalAlignment="Center"/>
                        <ToggleButton Grid.Column="2">123</ToggleButton>
                    </Grid>
                </Border>
            </Grid>
        </Border>
    </StackPanel>
</UserControl>
